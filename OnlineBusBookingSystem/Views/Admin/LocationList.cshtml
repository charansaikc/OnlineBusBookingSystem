@model IEnumerable<OnlineBusBookingSystem.Models.LocationListModel>

@{
    ViewBag.Title = "LocationList";
}
<div class="row">
    <div class="card">
        <div class="card-header">
            Location List
        </div>
        <div class="card-body">
            <p>
                @Html.ActionLink("Add New", "CreateLocation")
            </p>
            <table class="table example">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Terminal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.State)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LocationId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Terminal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.State)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditLocation", new {  id=item.LocationId }) |
                                
                                @Html.ActionLink("Delete", "DeleteLocation", new {  id=item.LocationId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>