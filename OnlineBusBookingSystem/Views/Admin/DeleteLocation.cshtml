@model OnlineBusBookingSystem.Models.LocationListModel

@{
    ViewBag.Title = "DeleteLocation";
}
<div class="row">
    <div class="card">
        <div class="card-header">
            Delete Location Details
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">

                    <dt>
                        @Html.DisplayNameFor(model => model.Terminal)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Terminal)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.City)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.City)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.State)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.State)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        @Html.ActionLink("Back to List", "LocationList")
                    </div>
                }
            </div>
        </div>
    </div>
</div>