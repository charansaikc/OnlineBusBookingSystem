@model OnlineBusBookingSystem.Models.BusListModel

@{
    ViewBag.Title = "DeleteBusList";
}
<div class="row">
    <div class="card">
        <div class="card-header">
            Delete Bus Details
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this?</h3>
            <div>
                
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.BusNo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.BusNo)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.BusName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.BusName)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
